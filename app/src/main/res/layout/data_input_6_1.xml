<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:padding="10dp"
    tools:context="com.undp.aep.ui.Activity.Data_input_6">
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sw_icdl"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:text="هل تمتلك الشهادة الدولية لقيادة الحاسب ICDL ؟ "
        android:checked="false">

    </com.google.android.material.switchmaterial.SwitchMaterial>
    <ListView
        android:id="@+id/lst_programs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sw_icdl"
        android:layout_above="@+id/fab_next"
        >
    </ListView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/purple_700"
        android:textColor="#FFFFFF"
        app:icon="@drawable/next"
        app:iconTint="#FFFFFF"
        android:text="التالي"/>
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="#B5E8FF"
        android:textColor="#000000"
        app:icon="@drawable/ic_add1"
       />


</RelativeLayout>