<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:padding="10dp"
 >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ماهي برأيك نقاط قوتك الرئيسية ؟"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/txt_tmp1"
            android:textColor="@color/black">
        </com.google.android.material.textview.MaterialTextView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tmp1"
            android:layout_above="@+id/txt_tmp2"
            android:id="@+id/lst_strength">
        </ListView>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_adds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#B5E8FF"
            android:layout_centerVertical="true"
            android:layout_above="@+id/txt_tmp2"
            android:textColor="#000000"
            app:icon="@drawable/ic_add1"
            />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ماهي برأيك نقاط ضعفك الرئيسية ؟"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/txt_tmp2"
            android:textColor="@color/black">
        </com.google.android.material.textview.MaterialTextView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lst_weakness"
            android:layout_below="@+id/txt_tmp2"
            android:layout_above="@+id/fab_next">
        </ListView>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_addw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:backgroundTint="#B5E8FF"
            android:textColor="#000000"
            app:icon="@drawable/ic_add1"
            />


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/purple_700"
        android:textColor="#FFFFFF"
        app:icon="@drawable/next"
        app:iconTint="#FFFFFF"
        android:text="التالي"/>

</RelativeLayout>