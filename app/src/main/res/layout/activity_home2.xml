<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context=".Ui.Activity.HomeActivity2">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/container_frame_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/tab"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_height="match_parent"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_below="@id/tab"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

<com.google.android.material.tabs.TabLayout
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
app:tabIndicatorColor="@color/colorblue"

    android:id="@+id/tab"

    >
    <com.google.android.material.tabs.TabItem
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/main"
        android:icon="@drawable/home2"

        />
    <com.google.android.material.tabs.TabItem
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/continuousEducation"

        />

    <com.google.android.material.tabs.TabItem
        android:layout_width="50dp"
        android:layout_height="wrap_content"
android:text="التعليم المهني"

/>

    <com.google.android.material.tabs.TabItem
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="@string/myaccount"


        />
</com.google.android.material.tabs.TabLayout>



    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:text="تقدم للمركز"
        app:icon="@drawable/ic_resume" />

</RelativeLayout>